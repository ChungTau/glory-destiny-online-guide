{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "outDir": "./.next",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"],
      "@glory-destiny-online-guide/prisma/*": [
        "../../packages/prisma/*"
      ],
      "@glory-destiny-online-guide/ui/*": [
        "../../packages/ui/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "middleware.ts",
    "next.config.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
