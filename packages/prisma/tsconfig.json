{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "declaration": true,
    "noEmit": false,
    "module": "commonjs",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["schema/**/*", "scripts/**/*", "generated/**/*"],
  "exclude": ["node_modules", "dist"]
}