FROM node:20-alpine
WORKDIR /app
COPY package.json pnpm-lock.yaml ./
COPY pnpm-workspace.yaml ./
COPY tsconfig.base.json ./
COPY packages/prisma/package.json packages/prisma/
RUN npm install -g pnpm && pnpm install --frozen-lockfile
COPY packages/prisma ./packages/prisma
RUN pnpm --filter=@glory-destiny-online-guide/prisma run merge-prisma
RUN pnpm --filter=@glory-destiny-online-guide/prisma run generate
RUN pnpm --filter=@glory-destiny-online-guide/prisma run generate-entity-includes
RUN pnpm --filter=@glory-destiny-online-guide/prisma run generate-exports
CMD ["tail", "-f", "/dev/null"]